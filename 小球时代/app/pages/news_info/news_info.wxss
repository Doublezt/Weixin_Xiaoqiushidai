text,
view {
    box-sizing: border-box
}

.article {
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    width: 100%;
}

.article .title {
    font-size: 36rpx;
    display: block;
    border-bottom: 1px solid #f70909;
    padding-bottom: 8px;
    margin-bottom: 8px;
    font-weight: 700
}

.ptime {
    font-size: 24rpx;
    color: #666;
    padding-top: 3px;
    font-weight: 400
}

.wxParse {
    font-size: 28rpx;
    color: #333
}

.wxParse image {
    width: 100% !important;
}

.comment-wrap {
    border-top: 10px solid #815dc2
}

.comment-wrap .title {
    font-size: 28rpx;
    border-left: 3px solid red;
    padding-left: 10px;
    margin: 5px;
}

.comment-item {
    box-sizing: border-box;
    width: 100%;
    padding: 15rpx 30rpx;
    border-bottom: 1rpx solid #784ea8;
    float: left
}

.comment-item .left {
    width: 80rpx
}

.comment-item .left image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    border: 1rpx solid #e3e3e3
}

.comment-item .right {
    float: left;
    width: 610rpx;
    font-size: 28rpx;
}

.comment-item .right .user-name {
    color: rgb(94, 45, 158)
}

.comment-item .right .time {
    font-size: 24rpx;
    color: #666;
    padding: 3px 0
}

.comment-item .right .content {
    font-size: 26rpx;
}

.comment-item .right .address {
    font-size: 24rpx;
    color: #666;
    padding: 3px 0
}